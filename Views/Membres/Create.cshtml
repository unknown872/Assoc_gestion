@model appli_gest_assoc.Models.Membre

@{
    ViewData["Title"] = "Create";
}

@{
    ViewData["Title"] = "Ajouter un membre";
}

<div class="container">

    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <h4 class="pull-left page-title">Membres</h4>
            <ol class="breadcrumb pull-right">
                <li><a asp-controller="Home" asp-action="Index">Sofa</a></li>
                <li><a asp-controller="Membres" asp-action="Index">Membre</a></li>
                <li class="active">Ajouter un membre</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading"><h3 class="panel-title">Ajouter un membre</h3></div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form" method="post" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" asp-for="PrenomMembre">Prénom</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="nom" placeholder="Saisir le prénom du membre" asp-for="PrenomMembre" required="">
                                <span asp-validation-for="PrenomMembre" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" asp-for="NomMembre">Nom</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="nom" placeholder="Saisir le nom du membre" asp-for="NomMembre" required="">
                                <span asp-validation-for="NomMembre" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" asp-for="Sexe">Sexe</label>
                            <div class="col-md-10">

                                <select class="form-control" asp-for="Sexe" required="">
                                    <option>Homme</option>
                                    <option>Femme</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" asp-for="DateNaiss">Date de naissance</label>
                            <div class="col-md-10">
                                <input type="date" class="form-control" id="tel1" placeholder="Saisir la date de naissance" asp-for="DateNaiss" required="">
                                <span asp-validation-for="DateNaiss" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" asp-for="LieuNaiss">Lieu de naissance</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="tel3" placeholder="Saisir le lieu de naissance" asp-for="LieuNaiss" required="">
                                <span asp-validation-for="LieuNaiss" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" asp-for="Tel">Téléphone</label>
                            <div class="col-md-10">
                                <input type="tel" class="form-control" id="Tel" placeholder="Saisir le numéro de téléphone " asp-for="Tel" required="">
                                <span asp-validation-for="Tel" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" asp-for="Email">Email</label>
                            <div class="col-md-10">
                                <input type="email" class="form-control" id="email" placeholder="Saisir le numéro l'email' de l'association" asp-for="Email" required="">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" asp-for="Adresse">Adresse</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="adrr" placeholder="Saisir l'adresse de l'association" asp-for="Adresse" required="">
                                <span asp-validation-for="Adresse" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col text-center">
                                    <button type="submit" class="btn btn-primary btn-custom waves-effect waves-light m-b-5 btn-lg">Ajouter</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div> <!-- panel-body -->
            </div> <!-- panel -->
        </div> <!-- col -->
    </div>
</div> <!-- container -->
