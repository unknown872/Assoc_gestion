@model appli_gest_assoc.Models.MemberSearching

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <h4 class="pull-left page-title">Membre</h4>
            <ol class="breadcrumb pull-right">
                <li><a asp-controller="Home" asp-action="Index">Sofa</a></li>
                <li><a asp-controller="Membres" asp-action="Index">Membre</a></li>
                <li class="active">Liste des membres</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-heading">
                        <h3 class="panel-title">Liste des associations</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <form asp-controller="Membres" asp-action="Index" method="get">
                                    <p>
                                        <input type="text" asp-for="SearchString" placeholder="Matricule"/>
                                        <button class="btn btn-primary" type="submit">Filtrer</button>
                                    </p>
                                </form><br />
                                <table id="datatable" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>
                                                Matricule
                                            </th>
                                            <th>
                                                Prénom
                                            </th>
                                            <th>
                                                Nom
                                            </th>
                                            <th>
                                                Télephone
                                            </th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>


                                    <tbody>

                                        @foreach (var item in Model.Members)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IdMembre)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PrenomMembre)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.NomMembre)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Tel)
                                                </td>
           @*                                     <td>
                                                    @Html.DisplayFor(modelItem => item.Adresse)
                                                </td>*@
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="@item.IdMembre"><i class="fa fa-edit"></i></a> |
                                                    <a asp-action="Details" asp-route-id="@item.IdMembre"><i class="fa fa-list-alt"></i></a> |
                                                    <a asp-action="Delete" asp-route-id="@item.IdMembre"><i class="fa fa-trash"></i></a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div> <!-- End Row -->


    </div>
</div>