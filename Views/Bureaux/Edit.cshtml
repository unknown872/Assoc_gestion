@model appli_gest_assoc.Models.Bureau

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title">Modifier un bureau</h3></div>
            <div class="panel-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdBureau" />
                    <div class="form-group">
                        <label asp-for="NomBureau" class="control-label">Bureau</label>
                        <input asp-for="NomBureau" class="form-control" required=""/>
                        <span asp-validation-for="NomBureau" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateCreation" class="control-label">Date de création</label>
                        <input asp-for="DateCreation" class="form-control" />
                        <span asp-validation-for="DateCreation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AssociationId" class="control-label">Association</label>
                        <select asp-for="AssociationId" class="form-control" asp-items="ViewBag.AssociationId"></select>
                        <span asp-validation-for="AssociationId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ActiviteId" class="control-label">Activité</label>
                        <select asp-for="ActiviteId" class="form-control" asp-items="ViewBag.ActiviteId"></select>
                        <span asp-validation-for="ActiviteId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Modifier" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>