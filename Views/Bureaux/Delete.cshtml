@model appli_gest_assoc.Models.Bureau

@{
    ViewData["Title"] = "Delete";
}


<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading text-center"><h3 class="panel-title">Supprimer un bureau</h3></div>
            <div class="panel-body">

                <div class="form-group">
                    <label class="col-md-2 control-label" for="email">Nom bureau</label>
                    <div class="col-md-10">
                        <input value="@Model.NomBureau" class="form-control" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="email">Année de création</label>
                    <div class="col-md-10">
                        <input value="@Model.DateCreation" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="email">Association</label>
                        <div class="col-md-10">
                            <input value="@Model.Association.NomAssociation" class="form-control" readonly>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="email">Activité</label>
                            <div class="col-md-10">
                                <input value="@Model.Activite.Libelle" class="form-control" readonly>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdBureau" />
    <input type="submit" value="Supprimer" class="btn btn-danger" />
</form>
