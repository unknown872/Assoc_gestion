@model appli_gest_assoc.Models.ActiviteSearching

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <ol class="breadcrumb pull-right">
                <li><a asp-controller="Home" asp-action="Index">Sofa</a></li>
                <li><a asp-controller="Activites" asp-action="Index">Acitivité</a></li>
                <li class="active">Liste des activités</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-heading">
                        <h3 class="panel-title">Liste des activités</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <form asp-controller="Activites" asp-action="Index" method="get">
                                    <p>
                                        <input type="text" asp-for="SearchString" placeholder="Nom de l'activité'"/>
                                        <button class="btn btn-primary" type="submit">Filtrer</button>
                                    </p>
                                </form><br />
                                <table id="datatable" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>
                                                Activité
                                            </th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>


                                    <tbody>

                                        @foreach (var item in Model.Activites)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Libelle)
                                                </td>
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="@item.IdActivite"><i class="fa fa-edit"></i></a> |
                                                    <a asp-action="Delete" asp-route-id="@item.IdActivite"><i class="fa fa-trash"></i></a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div> <!-- End Row -->


    </div>
</div>