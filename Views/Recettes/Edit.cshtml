@model appli_gest_assoc.Models.Recette

@{
    ViewData["Title"] = "Edit";
}

</h4>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title">Modifier une recette</h3></div>
            <div class="panel-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdRecette" />
                    <div class="form-group">
                        <label asp-for="Libelle" class="control-label">Libellé</label>
                        <input asp-for="Libelle" class="form-control" required=""/>
                        <span asp-validation-for="Libelle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TypeRecetteId" class="control-label">Type de recette</label>
                        <select asp-for="TypeRecetteId" class="form-control" asp-items="ViewBag.TypeRecetteId"></select>
                        <span asp-validation-for="TypeRecetteId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Montant" class="control-label">Montant</label>
                        <input asp-for="Montant" class="form-control" required=""/>
                        <span asp-validation-for="Montant" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BureauId" class="control-label">Bureau</label>
                        <select asp-for="BureauId" class="form-control" asp-items="ViewBag.BureauId"></select>
                        <span asp-validation-for="BureauId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Modifier" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
