@model appli_gest_assoc.Models.Association

@{
    ViewData["Title"] = "Infos association";
}

<!-- Start content -->
<div class="content">
    <div class="wraper container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="bg-light text-center">
                    <div class="bg-picture text-center" style="background-image:url('images/big/bg.jpg')"></div>
                    <div class="profile-info-name">
                        <h3 class="text-dark mb-auto">@Model.NomAssociation</h3>
                    </div>
                </div>
                <!--/ meta -->
            </div>
        </div>
        <div class="row user-tabs">
            <div class="col-lg-6 col-md-9 col-sm-9">
                <ul class="nav nav-tabs tabs">
                    <li class="active tab">
                        <a href="#home-2" data-toggle="tab" aria-expanded="false" class="active">
                            <span class="visible-xs"><i class="fa fa-home"></i></span>
                            <span class="hidden-xs">Infos</span>
                        </a>
                    </li>
                    <div class="indicator"></div>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">

                <div class="tab-content profile-tab-content">
                    <div class="tab-pane active" id="home-2">
                        <div class="row">
                            <div class="col-md-12">
                                <!-- Personal-Information -->
                                <div class="panel panel-default panel-fill">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Informations sur l'association</h3>
                                    </div>
                                    <div class="panel-body">
                                        <div class="about-info-p">
                                            <strong>Nom de l'association</strong>
                                            <br />
                                            <p class="text-muted">@Model.NomAssociation</p>
                                        </div>
                                        <div class="about-info-p">
                                            <strong>Année de création</strong>
                                            <br />
                                            <p class="text-muted">@Model.AnneeCreation</p>
                                        </div>
                                        <div class="about-info-p">
                                            <strong>Téléphone 1</strong>
                                            <br />
                                            <p class="text-muted">@Model.Tel1</p>
                                        </div>
                                        <div class="about-info-p">
                                            <strong>Téléphone 2</strong>
                                            <br />
                                            <p class="text-muted">@Model.Tel2</p>
                                        </div>
                                        <div class="about-info-p">
                                            <strong>Email</strong>
                                            <br />
                                            <p class="text-muted">@Model.Email</p>
                                        </div>
                                        <div class="about-info-p m-b-0">
                                            <strong>Adresse</strong>
                                            <br />
                                            <p class="text-muted">@Model.Adresse</p>
                                        </div>
                                    </div>
                                </div>
                                <!-- Personal-Information -->

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- container -->

</div> <!-- content -->